<%- include('../shared/logheader.ejs')%>

<section>
    <section class="container">
        <div class="columns is-multiline">
            <div class="column is-10 is-offset-1 register">
                <div class="columns">
                    <div class="column left">
                        <h1 class="title is-1">Random website</h1>
                        <h2 class="subtitle is-4">Sign up page</h2>
                        <p>You can't do more simple as a signup page. click <a href="/">here</a> to return home page.</p>

                    </div>
                    <div class="column right has-text-centered">
                        <h1 class="title is-4">Sign up</h1>
                        <form action="/sign_up" method="post" class="has-text-left">
                            <div class="field">
                                <div class="control">
                                    <label class="label" for="email">Email:</label>
                                    <input class="input is-medium" type="email" placeholder="JohnDoe555@example.cow" name="email" id="email">
                                </div>
                            </div>

                            <div class="field">
                                <div class="control">
                                    <label class="label" for="password">Password:</label>
                                    <input class="input is-medium" type="password" placeholder="password" name="password" id="password">
                                </div>
                            </div>
                            <div class="field">
                                <div class="control">
                                    <label class="label" for="first_name">First name:</label>
                                    <input class="input is-medium" type="text" placeholder="John" name="first_name" id="first_name">
                                </div>
                            </div>
                            <div class="field">
                                <div class="control">
                                    <label class="label" for="last_name">Last name:</label>
                                    <input class="input is-medium" type="text" placeholder="Doe" name="last_name" id="last_name">
                                </div>
                            </div>
                            <button type="submit" class="button is-block is-warning is-fullwidth is-medium">SIGN UP</button>
                            <br />
                            <div class="has-text-centered">
                                <small><em> You are fully responsible for the information entered in the template</em></small>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </section>
<%- include('../shared/logfooter.ejs')%>